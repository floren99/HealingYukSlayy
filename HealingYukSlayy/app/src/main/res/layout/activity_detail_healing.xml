<?xml version="1.0" encoding="utf-8"?>
<!--activity_detail_healing.xml-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHealingDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Nongkrong Basecamp"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDetailCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@color/material_on_surface_disabled"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Cafe"
                    android:textColor="@color/md_theme_onTertiaryFixed"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Location Details"
                    android:textColor="@color/md_theme_inverseSurface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDetailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Tempat Sera Nongkrong Maksimum"
                    android:textColor="@color/md_theme_inverseSurface"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvFullDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Nongkrong Basecamp adalah tempat yang sempurna untuk berkumpul dengan teman atau keluarga. Dengan suasana yang nyaman dan makanan yang lezat, tempat ini menjadi pilihan utama untuk healing dari rutinitas sehari-hari."
                    android:textAlignment="viewStart"
                    android:textColor="@color/md_theme_inverseSurface"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavourite"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/material_dynamic_primary0"
                    android:text="@string/add_to_favourite"
                    android:textSize="16sp"
                    app:cornerRadius="28dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>